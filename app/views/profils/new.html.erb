<h1>Crée ton profil</h1>

    <%= form_for @profil do |f| %>

      <%= f.label :nom, "Entre ton nom" %>
      <%= f.text_field :nom %>

      <%= f.label :prenom, "Entre ton prenoms" %>
      <%= f.text_area :prenom %>

      <%= f.label :email, "Entre ton emails" %>
      <%= f.text_area :email %>

      <%= f.label :age, "Entre ton age" %>
      <%= f.text_area :age %>

      <%= f.file_field :img_profil %>

      <%# <%= f.collection_select :item_id, Item.all, :id, :name, prompt: "Sélectionnez un élément" %> %>


      <%= f.submit :Création %>

    <% end %>

  <div class="bouton-add">
    <%= link_to'Retour', profils_path %>
  </div>
